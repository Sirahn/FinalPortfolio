@model IEnumerable<SirahnFinalProject.Models.PortfolioProject>

@{
    ViewBag.Title = "Index";
}

<div class="moreskillz">

<h2>Projects</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
</div>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectLink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Screenshot)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectLink)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Screenshot)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProjectID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProjectID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProjectID })
        </td>
    </tr>
}

</table>
